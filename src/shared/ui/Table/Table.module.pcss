@import "../../../app/styles/custom-media.pcss";

.tableWrapper {
  border-radius: 21px;
  overflow: hidden;
}

.table {
  --tableTheadHeight: 82px;

  direction: ltr;
  width: 100%;
  background: linear-gradient(180deg, #000 0%, rgb(97 35 227 / 50%) 100%);
  padding-bottom: 13px;
  border-collapse: collapse;
  border-spacing: 0;

  @media (--tabletSmall) {
    min-width: 52px;
  }

  @media (--tabletMinimum) {
    font-size: 22px;
  }
}

.table thead th {
  height: var(--tableTheadHeight);
  font-weight: 400;
  font-size: 16px;
  text-transform: uppercase;
  text-align: center;
  color: var(--colorWhite);

  @media (--tabletMinimum) {
    font-size: 8px;
  }
}

.table thead tr th:first-child {
  color: var(--colorOrange);
}

.table tr td {
  color: var(--colorPrimaty);
  font-size: 14px;
  text-transform: uppercase;

  @media (--tabletSmall) {
    font-size: 10px;
  }

  @media (--tabletMinimum) {
    font-size: 8px;
  }
}

.table tr td:first-child {
  display: flex;
  gap: 26px;
  align-items: center;

  @media (--tabletMinimum) {
    gap: 6px;
  }

  &::before {
    content: "";
    min-width: 24px;
    height: 17px;
    display: inline-block;
    background-image: url("data:image/png;base64,");
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;

    @media (--tabletMinimum) {
      min-width: 10px;
      height: 7px;
    }
  }
}

.table th,
td {
  min-width: 206px;
  border: 0;

  @media (--tabletSmall) {
    min-width: 150px;
  }

  @media (--tabletMinimum) {
    min-width: 75px;
  }
}

.table :is(th:first-child, td:first-child) {
  padding-left: 44px;

  @media (--tabletSmall) {
    padding-left: 8px;
  }
}

.table td {
  padding-block: 14px;
}

.table td:last-child {
  display: flex;
  align-items: center;
  gap: 36px;
  justify-content: center;

  @media (--tabletMinimum) {
    gap: 6px;
  }

  &::before {
    content: "";
    min-width: 18px;
    height: 22px;
    display: inline-block;
    background-image: url("data:image/png;base64,");
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;

    @media (--tabletMinimum) {
      min-width: 8px;
      height: 10px;
    }
  }
}

.table td:not(:first-child) {
  text-align: center;
}

.table tr:nth-child(2n) {
  background-color: var(--colorPersianIndigo);
}

.table tr:nth-child(2n) :is(td:first-child, td:last-child) {
  color: var(--colorOrange);
}

.table thead tr th:last-child {
  color: var(--colorPrimary);
}

.table tbody tr :is(td:first-child, td:last-child) {
  color: var(--colorPrimary);
}
